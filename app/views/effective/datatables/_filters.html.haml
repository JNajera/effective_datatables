.effective-datatables-filters{'aria-controls': datatable.to_param}
  = effective_form_with(scope: :filters, url: (datatable._form[:url] || '#'), layout: :inline, method: datatable._form[:verb]) do |form|
    - if datatable._scopes.present?
      = form.collection_radio_buttons :scope, datatable._scopes.map { |name, opts| [opts[:label], name] }, :last, :first, label: false, required: false, checked: datatable.state[:scope]

    - datatable._filters.each do |name, opts|
      = datatable_filter_tag(form, datatable, name, opts)

    - if datatable._filters_form_required?
      = form.submit 'Apply', 'data-disable-with': 'Applying...'
    - else
      = link_to 'Apply', '#', class: 'btn btn-primary btn-effective-datatables-filters', 'data-apply-effective-datatables-filters': true

